# Declare a custom PS1 variable
PS1="\[$(tput setaf 3)\](\t) \[$(tput bold setaf 2)\]\u@\h\[$(tput setaf 6)\]\w\[$(tput sgr0)\]$ "

# Custom aliases
alias ll='ls -lh --color'
alias la='ls -la --color'
alias lla='ls -lhta --color'
alias llt='ls -lht --color'
alias ls='ls --color'
alias grep='grep --color'

# Custom git & github aliases
alias gga='git add .'
alias ggc='git commit'
alias ggp='git push'
